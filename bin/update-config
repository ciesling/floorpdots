#!/usr/bin/env bash
# author | cherrynoize
# update and push dotfiles

remote="origin" # remote to push to

# first create commit
commit-config "$@"

echo
if [ -n "$(wireless-signal)" ]; then
  echo "* pushing changes to $remote"
  cfg push -u "$remote" || {
    echo "[!] error: failed to push to $remote"
  }
else
  echo "[!] no network found: can't push to $remote"
  exit 2
fi
