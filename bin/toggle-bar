#!/bin/sh
if switch-bar status; then
  # close bar then remove gap
  pad="$(bash ~/.config/bspwm/themes/current padding)"
  switch-bar toggle
  bspc config top_padding "$pad"
else
  # create space first then launch bar
  pad="$(bash ~/.config/bspwm/themes/current top-padding)"
  bspc config top_padding "$pad"
  switch-bar toggle
fi
