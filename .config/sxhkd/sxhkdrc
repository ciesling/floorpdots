#
# wm independent hotkeys
#

# terminal
super + Return
    "$TERMINAL"

# discord
super + alt + d
    pgrep discord && killall discord || discord

# spotify
super + alt + s
    pgrep spotify && killall spotify || spotify-launcher

# mail
super + alt + m
    "$MAILCLIENT"

# browser
super + alt + w
    "$BROWSER"

# toggle conky
super + ctrl + c
    pgrep conky && killall conky || launch-conky

# restart conky
super + ctrl + shift + c
    launch-conky -r

# network menu
super + alt + n
    netmenu -p

# run prompt
super + r
    rofi -show run

# program launcher
super + x
    rofi -show drun

# view windows
super + w
    rofi -show window

# powermenu
super + q
    powermenu

# toggle light/dark mode
super + less
    switch-mode -n

# switch between bars
super + greater
    switch-bar

# toggle bar
super + z
    toggle-bar

# reload bar
super + shift + z
    switch-bar reload

# previous/next theme
super + alt + {less,greater}
    theme -n {prev,next}

# random theme
super + ctrl + r
    theme -n random

# select theme
super + space
    theme-selector

# change wallpaper
super + ctrl + w
    change-wallpaper -n -v

# reload wpg colorscheme and templates
super + ctrl + alt + w
    change-wallpaper -n -r -v

# switch keyboard layout
ctrl + alt + space
    kbdlayout shift

# screen to clipboard
Print
    snip -x

# take screenshot
super + Print
    snip 0

# start screen recording
super + alt + Print
    snip record

# stop screen recording
super + alt + shift + Print
    killall ffmpeg

# clipboard manager
super + alt + x
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# paste from clipboard manager
super + alt + v
    hyper-paste

# fill in password
super + alt + p
#   passmenu --type
    rofi-pass

# character picker
super + alt + i
    rofimoji

# long em dash
#ctrl + shift + minus
#    xdotool type --window "%0" --clearmodifiers --delay "0ms" -- 'â€”'

