## prev or next track
#XF86Audio{Prev,Next}
#    playerctl {previous,next}
##   mpc -q {prev,next}
#
## prev, prev twice, next or toggle track
#super + minus ; {p,P,n,space}
#    playerctl {previous,previous; playerctl previous,next,play-pause}
#
## volume down or up
#super + minus ; {d,u}
#    pa-change-app-volume Spotify volume {-,+}10%
#
## volume down by amount
#super + minus ; {1-9,0} ; d
#    pa-change-app-volume Spotify volume -{1-9,10}0%
#
## volume up by amount
#super + minus ; {1-9,0} ; u
#    pa-change-app-volume Spotify volume +{1-9,10}0%
#
## toggle mute
#super + minus ; m
#    pa-change-app-volume Spotify mute toggle
#
## show playing
#super + minus ; apostrophe
#    show-playing

#
# external commands
#

# brightness down or up
XF86MonBrightness{Down,Up}
#   set-light -{d,u}r 7
    change-brightness {down,up} 5

# brightness min or max
super + XF86MonBrightness{Down,Up}
#   set-light -{m,M}
    change-brightness {down,up} 100

# brightness increase/decrease by 1
super + shift + b ; {minus,plus}
#   set-light -{d,u} 1
    change-brightness {down,up} 1

# set brightness to value
super + shift + b ; {0-9} ; period
#   set-light -r {0-9}
    change-brightness to {0-9}
super + shift + b ; {0-9} ; {0-9} ; period
#   set-light -r {0-9}{0-9}
    change-brightness to {0-9}{0-9}

# perceived brightness down or up
#super + alt + {minus,plus}
#   perceived-brightness {down,up}

# perceived brightness to normal
#super + alt + 0
#    perceived-brightness normal

# turn screen off
super + Delete
    screen-off

# sleep
XF86PowerOff
    suspend-system

# volume down or up
XF86Audio{Lower,Raise}Volume
    change-volume {down,up}

# mute audio
XF86AudioMute
    change-volume toggle

# date
super + d
    notify-date

# battery
super + alt + b
    notify-bat -m -s

# temperature
super + alt + t
    notify-temp

# cpu usage
super + alt + c
    notify-cpu

# mem usage
super + alt + r
    notify-mem

# close all notifications
super + alt + n
    dunstctl close-all
# kill battery timer notifications
#   notify-timer -k 1111

#
# sxhkd hotkeys
#

# sxhkd reload
super + Escape
    reload-sxhkd

# everything reload
super + shift + Escape
    notify-unfuck

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# kill bspwm
super + ctrl + q
    bspc quit

# node close and kill
super + shift + {_,alt} + w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
    bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + f,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + {_,shift + } bracket{left,right} + {_,ctrl}
    bspc {desktop -f,node -d} {prev,next}.local {_,--follow}

# focus the last node/desktop
super + {shift + ,_} Tab
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0,apostrophe,igrave}
    bspc {desktop -f,node -d} '^{1-9,10,11,12}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {u,i,o,p}
    bspc node -v {-20 0,0 20,0 -20,20 0}
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
